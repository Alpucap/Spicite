<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Profile Page</title>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Cinzel+Decorative&display=swap');
    body {
        font-family: 'Montserrat', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #140a0a;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .profile-header canvas {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 5px solid #ebeeec;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .profile-header h1 {
        margin: 10px 0;
        color: #ebeeec;
        font-family: 'Cinzel Decorative', serif;
    }

    .profile-header p {
        margin: 10px 0;
        color: #ebeeec;
    }

    .buttons {
        display: flex;
        gap: 10px;
    }


    .delete-btn {
        display: block;
        margin-top: 20px;
        text-align: center;
    }
      
    .delete-btn input[type="button"] {
        background-color: #ff6347; /* Merah untuk warna yang menunjukkan penghapusan */
        border: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
      
    .delete-btn input[type="button"]:hover {
        background-color: #cc4c3b; /* Warna yang lebih gelap saat tombol dihover */
    }

    .update-btn {
        display: block;
        margin-top: 20px;
        text-align: center;
    }

    .update-btn input[type="button"] {
        background-color: #8fae51; /* Merah untuk warna yang menunjukkan penghapusan */
        border: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
      
    .update-btn input[type="button"]:hover {
        background-color: #8fae51; /* Warna yang lebih gelap saat tombol dihover */
    }

    #update-form {
        display: none;
        margin-top: 20px;
    }

    #update-profile-form {
        background-color: #f2f2f2;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    #update-profile-form label {
        display: block;
        font-weight: bold;
        margin-bottom: 10px;
    }

    #update-profile-form input[type="text"],
    #update-profile-form input[type="email"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

    #update-profile-form input[type="button"] {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    #update-profile-form input[type="button"]:hover {
        background-color: #45a049;
    }


    .logout-btn {
        display: block;
        margin-top: 20px;
        text-align: center;
    }

    .logout-btn input[type="submit"] {
        background-color: #8fae51;
        border: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .logout-btn input[type="submit"]:hover {
        background-color: #8fae51;
    }

    .back-button{
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        color: #ebeeec;
        border-radius: 5px;
        width: auto;
        text-align: center;
        border: 1px solid #2d3230; 
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s, color 0.3s, border 0.3s; 
    }

    .back-button:hover{
        transform: scale(1.05); 
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3); 
        border: 1px solid transparent; 
    }
</style>
</head>
<body>

<div class="container">
    <a href="#" onclick="goBack()" class="back-button"><<</a>
    <div class="profile-header">
        <canvas id="profileCanvas" alt="Profile Picture"></canvas>
        <h1><%= name %></h1>
        <p><%= email %></p>
    </div>
    <div class="update-btn">
        <input type="button" value="Update" onclick="toggleUpdateForm()">
    </div>
    
    <div id="update-form" style="display: none;">
        <form id="update-profile-form">
            <label for="newName">Nama:</label>
            <input type="text" id="newName" name="newName"><br><br>
            <label for="newEmail">Email:</label>
            <input type="email" id="newEmail" name="newEmail"><br><br>
            <input type="button" value="Submit" onclick="updateProfile()">
        </form>
    </div>
    <div class="logout-btn">
        <form id="logout-form" action="/logout" method="POST">
            <input type="submit" value="Logout">
        </form>
    </div>
    <div class="delete-btn">
        <input type="button" value="Delete Account" onclick="deleteAccount()">
    </div>
</div>

<script>

//BACK
function goBack() {
    window.history.back();
}

function toggleUpdateForm() {
    var form = document.getElementById("update-form");
    if (form.style.display === "none") {
        form.style.display = "block";
    } else {
        form.style.display = "none";
    }
}

function updateProfile() {
    var newName = document.getElementById("newName").value;
    var newEmail = document.getElementById("newEmail").value;

    if (newName && newEmail) {
        if (confirm("Are you sure you want to update your profile?")) {
            // Kirim permintaan pembaruan profil ke server
            fetch('/update-profile', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ newName: newName, newEmail: newEmail }),
                credentials: 'same-origin'
            })
            .then(response => {
                if (response.ok) {
                    // Jika pembaruan berhasil, perbarui UI
                    updateUI(newName, newEmail);
                } else {
                    throw new Error('Failed to update profile');
                }
            })
            .catch(error => {
                console.error(error);
                alert('Failed to update profile');
            });
        }
    } else {
        alert("Please provide both a new name and email");
    }
}

// Fungsi untuk memperbarui UI dengan data profil yang baru
function updateUI(newName, newEmail) {
    // Perbarui elemen HTML yang menampilkan nama dan email
    document.getElementById("name").innerText = newName;
    document.getElementById("email").innerText = newEmail;

    // Sembunyikan formulir pembaruan
    document.getElementById("update-form").style.display = "none";
}

//
function setCookie(name, value, days) {
    var expires = "";
    if (days) {
        var date = new Date();
        date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
        expires = "; expires=" + date.toUTCString();
    }
    document.cookie = name + "=" + (value || "") + expires + "; path=/";
}

function getCookie(name) {
    var nameEQ = name + "=";
    var ca = document.cookie.split(';');
    for (var i = 0; i < ca.length; i++) {
        var c = ca[i];
        while (c.charAt(0) == ' ') c = c.substring(1, c.length);
        if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
    }
    return null;
}

//Random Profile Picture
document.addEventListener("DOMContentLoaded", function() {
    var canvas = document.getElementById("profileCanvas");
    var ctx = canvas.getContext("2d");
    var name = "<%= name %>";
    var initials = name.match(/\b\w/g) || [];
    initials = ((initials.shift() || '') + (initials.pop() || '')).toUpperCase();
    
    // Get stored background color from cookie
    var storedColor = getCookie('profileBackgroundColor');
    var backgroundColor = storedColor || '#' + Math.floor(Math.random() * 16777215).toString(16);

    // Save background color to cookie
    setCookie('profileBackgroundColor', backgroundColor, 7);

    canvas.width = 150;
    canvas.height = 150;
    
    ctx.fillStyle = backgroundColor;
    ctx.fillRect(0, 0, canvas.width, canvas.height);
    
    ctx.font = "bold 60px 'Montserrat', sans-serif";
    ctx.textAlign = "center";
    ctx.fillStyle = "#fff";
    ctx.fillText(initials, canvas.width / 2, canvas.height / 1.5);
});

//Delete Account
function deleteAccount() {
    if (confirm("Are you sure you want to delete your account?")) {
        // Kirim permintaan DELETE ke endpoint backend
        fetch('/delete-account', {
            method: 'DELETE',
            credentials: 'same-origin' // Jika menggunakan cookies untuk otentikasi
        })
        .then(response => {
            if (response.ok) {
                // Redirect pengguna ke halaman lain atau lakukan tindakan sesuai
                window.location.href = '/Homepage';
            } else {
                throw new Error('Failed to delete account');
            }
        })
        .catch(error => {
            console.error(error);
            alert('Failed to delete account');
        });
    }
}
</script>

</body>
</html>

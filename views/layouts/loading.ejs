<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loading Page</title>
    <style>
        #overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.629); 
            z-index: 9998; 
            display: none; 
        }
        
        #loading {
            width: 48px;
            height: 48px;
            margin: auto;
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 9999;
        }
        
        #loading:before {
            content: '';
            width: 48px;
            height: 5px;
            background: #8fae5155;
            position: absolute;
            top: 60px;
            left: 0;
            border-radius: 50%;
            animation: shadow 0.5s linear infinite;
        }
        
        #loading:after {
            content: '';
            width: 100%;
            height: 100%;
            background: #8fae51;
            position: absolute;
            top: 0;
            left: 0;
            border-radius: 4px;
            animation: jump 0.5s linear infinite;
        }
        
        @keyframes jump {
            15% {
                border-bottom-right-radius: 3px;
            }
        
            25% {
                transform: translateY(9px) rotate(22.5deg);
            }
        
            50% {
                transform: translateY(18px) scale(1, .9) rotate(45deg);
                border-bottom-right-radius: 40px;
            }
        
            75% {
                transform: translateY(9px) rotate(67.5deg);
            }
        
            100% {
                transform: translateY(0) rotate(90deg);
            }
        }
        
        @keyframes shadow{
        
            0%,
            100% {
                transform: scale(1, 1);
            }
        
            50% {
                transform: scale(1.2, 1);
            }
        }
    </style>
</head>
<body>

<!-- Overlay untuk latar belakang gelap -->
<div id="overlay"></div>

<!-- Loading  -->
<div id="loading"></div>

<script>
    // Fungsi untuk menampilkan halaman loading
    function showLoading() {
        document.getElementById('overlay').style.display = 'block'; // Tampilkan overlay
        document.getElementById('loading').style.display = 'block';
    }

    function hideLoading() {
        document.getElementById('overlay').style.display = 'none'; // Sembunyikan overlay
        document.getElementById('loading').style.display = 'none';
    }

    // Menampilkan halaman loading sebelum navigasi dimulai
    window.addEventListener('beforeunload', function () {
        showLoading();
    });

    // Menyembunyikan halaman loading setelah 3 detik
    window.addEventListener('load', function () {
        setTimeout(hideLoading, 3000); // Menyembunyikan halaman loading setelah 3 detik (3000 milidetik)
        hideLoading(); // Menyembunyikan halaman loading setelah halaman selesai dimuat
    });
    
    window.addEventListener('unload', function () {
        hideLoading();
    });
</script>

</body>
</html>

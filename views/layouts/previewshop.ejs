        <div class="navigation">
            <button class="nav-btn" onclick="prevPreview()">&#10094;</button>
            <button class="nav-btn" onclick="nextPreview()">&#10095;</button>
        </div>
    </div>

    <script>
        // JavaScript
        let previewIndex = 0;
        const slides = document.querySelectorAll('.Shop-Items .Shop-Item');

        function showPreview() {
            slides.forEach((item, index) => {
                if (index >= previewIndex * 3 && index < (previewIndex + 1) * 3) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        function nextPreview() {
            if (previewIndex < Math.ceil(slides.length / 3) - 1) {
                previewIndex++;
            } else {
                previewIndex = 0;
            }
            showPreview();
        }

        function prevPreview() {
            if (previewIndex > 0) {
                previewIndex--;
            } else {
                previewIndex = Math.ceil(slides.length / 3) - 1;
            }
            showPreview();
        }

        showPreview();
    </script>
</body>

